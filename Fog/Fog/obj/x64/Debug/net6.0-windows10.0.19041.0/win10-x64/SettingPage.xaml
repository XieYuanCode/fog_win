<Page
    x:Class="Fog.Pages.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <SplitView x:ConnectionId='2' x:Name="settingSplitView"
                   IsPaneOpen="True" 
                   DisplayMode="Inline"
                   PaneBackground="Transparent">
            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <ListView Margin="10, 10, 0, 0">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xe771;" FontSize="13" Margin="0, 0, 10, 0"/>
                            <TextBlock Text="General"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xe771;" FontSize="13" Margin="0, 0, 10, 0"/>
                            <TextBlock Text="Account"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <ImageIcon Source="./Assets/Icons/icon_git.png" Margin="0,0,10,0"></ImageIcon>
                            <TextBlock Text="Git"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xeda7;" FontSize="13" Margin="0, 0, 10, 0"/>
                            <TextBlock Text="Shortcut"></TextBlock>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xe771;" FontSize="13" Margin="0, 0, 10, 0"/>
                            <TextBlock Text="About"></TextBlock>
                        </StackPanel>
                    </ListView>
                    <Grid Padding="10" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <ToggleButton x:ConnectionId='4' Grid.Column="0" IsChecked="True"                         >
                            <SymbolIcon Symbol="Setting"></SymbolIcon>
                        </ToggleButton>
                    </Grid>
                </Grid>
            </SplitView.Pane>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="1"></TextBlock>
                <Image Source="./Assets/Icons/icon_git.png" Height="100" Width="100"/>
                <TextBlock Text="2"></TextBlock>
            </StackPanel>
        </SplitView>
       
        <InfoBar x:ConnectionId='3' x:Name="ColorModeChanged_Tip"
                 Margin="0,50,0,0"
                 Message="The Application Needs To Restart To Apply The New Color Mode">
            <InfoBar.ActionButton>
                <HyperlinkButton Content="Restart"></HyperlinkButton>
            </InfoBar.ActionButton>
        </InfoBar>
    </Grid>
</Page>

