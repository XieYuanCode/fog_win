<Page x:ConnectionId='1'
    x:Class="Fog.Pages.Settings.SettingAccount"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fog.Pages.Settings"
    xmlns:ServiceAccountManager ="using:Fog"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:media="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary x:Key="Default">
            <media:AcrylicBrush x:Key="CustomAcrylicInAppLuminosity"
            TintOpacity="0.4" TintLuminosityOpacity="0.1" TintColor="White"/>
            <DataTemplate x:ConnectionId='2' x:Name="ServiceAccount_GridViewDataTemplate"                                                  >
                <GridViewItem x:ConnectionId='3'>
                    <Grid x:Name="AccountCardControl" Width="200" Height="300">
                        <Grid.Shadow>
                            <ThemeShadow/>
                        </Grid.Shadow>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Border CornerRadius="4,4,0,0">
                                <Grid>
                                    <Image x:ConnectionId='7'                          Width="200"></Image>
                                    <Rectangle Fill="{ThemeResource CustomAcrylicInAppLuminosity}" Width="200" Height="200"/>
                                    <PersonPicture x:ConnectionId='8'                                  Width="100"></PersonPicture>
                                    <RelativePanel>
                                        <Image x:ConnectionId='9' Source="/Assets/github-logo.png" Width="20"                                                           RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True" Margin="0,0,10,10"></Image>
                                        <Image x:ConnectionId='10' Source="/Assets/gitlab-logo.png" Width="20"                                                           RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True" Margin="0,0,10,10"></Image>
                                        <HyperlinkButton RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignTopWithPanel="True">
                                            <SymbolIcon Symbol="More"  Foreground="Black"></SymbolIcon>
                                        </HyperlinkButton>
                                    </RelativePanel>
                                </Grid>
                            </Border>
                        </Grid>
                        <Border BorderThickness="1" 
                BorderBrush="{ThemeResource ButtonPointerOverBackgroundThemeBrush}"
                CornerRadius="0,0,4,4" 
                Grid.Row="1" 
                Background="{ThemeResource BackButtonBackgroundThemeBrush}"
                Width="200" 
                Height="100">
                            <Grid>
                                <Grid>
                                    <TextBlock x:ConnectionId='6'                                        FontSize="20" Margin="10,10,0,0"></TextBlock>
                                </Grid>
                                <RelativePanel>
                                    <TextBlock x:ConnectionId='5'                                        RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignRightWithPanel="True" FontSize="10" Margin="0,0,10,10"></TextBlock>
                                </RelativePanel>
                            </Grid>
                        </Border>
                    </Grid>
                </GridViewItem>
            </DataTemplate>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Padding="0, 20" Width="1000"  MaxWidth="1000" Spacing="5">
            <StackPanel.Resources>
                <Style TargetType="Expander">
                    <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                </Style>
            </StackPanel.Resources>
            <TextBlock Text="Service Account" Style="{StaticResource TitleTextBlockStyle}"></TextBlock>
            <Grid Margin="0,25,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Button x:ConnectionId='11' Width="200" Height="200" Grid.Row="0"                      x:Name="AddAccount_Button">
                    <Button.Content>
                        <StackPanel Orientation="Vertical" Spacing="10">
                            <SymbolIcon Symbol="Add"></SymbolIcon>
                            <TextBlock Text="Add Account"></TextBlock>
                        </StackPanel>
                    </Button.Content>
                </Button>
                <GridView x:ConnectionId='12' x:Name="ServiceAccounts_GridView"
                          Grid.Row="1"
                          Margin="0,20,0,0"
                          ItemTemplate="{StaticResource ServiceAccount_GridViewDataTemplate}"
                          IsItemClickEnabled="False"
                                                                                  
                          SelectionMode="None">
                </GridView>
            </Grid>
        </StackPanel>
    </Grid>
</Page>

